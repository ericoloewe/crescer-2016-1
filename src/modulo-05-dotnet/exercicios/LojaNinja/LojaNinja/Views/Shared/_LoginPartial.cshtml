@using LojaNinja.MVC.Services
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Sair", "Usuario", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink(string.Format("Olá {0}!", ServicoDeSessao.UsuarioLogado.Nome), "Detalhes", "Usuario", routeValues: new { id = ServicoDeSessao.UsuarioLogado.Id }, htmlAttributes: new { title = "Meus detalhes" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Sair</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Cadastrar-se", "Cadastro", "Usuario")</li>
        <li>@Html.ActionLink("Entrar", "Login", "Usuario")</li>
    </ul>
}

